<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    tools:context=".Welcome_form">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dedede"
        android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_get_start_timitory" />

        <TextView
            android:id="@+id/textk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myImage"
            android:layout_alignTop="@+id/myImage"
            android:layout_alignRight="@id/myImage"
            android:layout_alignBottom="@+id/myImage"
            android:layout_margin="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:text="@string/Anak"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="#f8f8f8"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Mulai"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_round"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</RelativeLayout>